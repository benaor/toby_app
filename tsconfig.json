{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@authentication/*": ["./src/modules/authentication/*"],
      "@events/*": ["./src/modules/events/*"],
      "@calendar/*": ["./src/modules/calendar/*"],
      "@profil/*": ["./src/modules/profil/*"],
      "@shared/*": ["./src/modules/shared/*"],
      "@store/*": ["./src/modules/store/*"],
      "@app/*": ["./src/modules/app/*"],
      "@themes/*": ["./src/ui/themes/*"],
      "@images/*": ["./assets/images/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@utils/*": ["./src/utils/*"],
      "@/*": ["./*"]
    },
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    // "exactOptionalPropertyTypes": true,
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
